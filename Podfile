  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Keyboard
  pod 'RealmSwift'
  pod 'SnapKit',    '~> 3.2.0'
  
end

target 'StickerShare' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for StickerShare
  pod 'RealmSwift'
  pod 'SnapKit',    '~> 3.2.0'

